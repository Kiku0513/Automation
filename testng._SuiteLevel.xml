<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	
  <test name="SanityTest">
	  <groups>
		  <run>
			  <include name="smoke"/>
			  <exclude name="regression"></exclude>
		  </run>
	  </groups>
    <classes>
      <class name="com.testNG.TestNg_Group1"/>
    </classes>
  </test> <!-- Test -->
  
  <test name="SmokeTest">
	  <groups>
		  <run>
			  <include name="regression"/>
		  </run>
	  </groups>
    <classes>
      <class name="com.testNG.TestNg_Group2"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
